<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dda"
    tools:context=".Ffriends_activity">
    <ScrollView
        android:id="@+id/fprofile"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fProfile_pic"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/profile"
                android:layout_marginLeft="110dp"/>

            <TextView
                android:id="@+id/fprofile_name"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/fProfile_pic"
                android:layout_marginLeft="165dp"
                android:text="Profile Name"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="10dp" />
            <TextView
                android:id="@+id/fprofile_username"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/fprofile_name"
                android:layout_marginLeft="180dp"
                android:text="user name"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="10dp" />
            <TextView
                android:id="@+id/fprofile_status"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/fprofile_username"
                android:layout_marginLeft="190dp"
                android:textColor="@android:color/tertiary_text_light"
                android:text="status"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="20dp" />
            <TextView
                android:id="@+id/fprofile_country"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/fprofile_status"
                android:layout_marginLeft="185dp"
                android:text="Country"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="40dp" />
            <TextView
                android:id="@+id/fprofile_dob"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/fprofile_country"
                android:layout_marginLeft="195dp"
                android:text="D.O.B"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/fprofilev_cid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="300dp"
                android:background="@drawable/inputs"
                android:visibility="invisible"
                android:padding="5dp"
                android:text="Description"/>
            <TextView
                android:id="@+id/fprofile_gender"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/fprofile_dob"
                android:layout_marginLeft="185dp"
                android:text="gender"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="10dp" />
            <Button
                android:id="@+id/fprofile_Sendrequest"
                android:layout_below="@+id/fprofile_gender"
                android:text="Send Friend Request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:visibility="gone"
                android:background="@drawable/btn"
                android:layout_marginRight="50dp"
                android:layout_marginTop="90dp" />
            <Button
            android:id="@+id/fprofile_SendMessage"
            android:layout_below="@+id/fprofile_gender"
            android:text="Send Message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@drawable/btn"
            android:layout_marginRight="50dp"
                android:visibility="gone"
            android:layout_marginTop="90dp" />

            <Button
                android:id="@+id/fprofile_Delete"
                android:layout_below="@+id/fprofile_Sendrequest"
                android:text="Delete or Block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:background="@drawable/btn"
                android:layout_marginRight="50dp"
                android:layout_marginTop="40dp" />





        </RelativeLayout>
    </ScrollView>



</RelativeLayout>