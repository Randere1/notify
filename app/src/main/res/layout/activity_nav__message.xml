<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nav_Message">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/nav_msg_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FFFFFF" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/texted"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"


        />
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/create"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:background="@drawable/ic_launcher_background"
        android:layout_marginBottom="50dp"
        >

    </ImageButton>

    <RelativeLayout
        android:id="@+id/nav_msg_lay"
        android:background ="#e6e6fa"
        android:layout_width="match_parent"
        android:layout_height="750dp"
        android:visibility="gone"
        >

        <EditText
            android:id="@+id/nav_msg_search_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/inputs"
            android:ems="10"
            android:hint="Search Here"
            android:inputType="textMultiLine"
            android:padding="16dp"
            android:textColorHint="@android:color/black"
            />

        <ImageButton
            android:id="@+id/nav_msg_search"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/inputs"
            android:src="@drawable/download" />

        <TextView
            android:id="@+id/nav_msg_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:text="X"
            android:textAlignment="textStart"
            android:textSize="25sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/nav_msg_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp" />

    </RelativeLayout>

</RelativeLayout>





